<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet styles.css ?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.ScatterChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import ru.bmstu.iu9.numan.fx.EnumChoiceBox?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="ru.bmstu.iu9.numan.cw.ChartsManager">

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>

        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>

    <!--first row:-->
    <Label text="c_b:" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets left="20.0" top="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="blockElasticityField" maxWidth="105.0" minWidth="105.0" text="120" GridPane.columnIndex="1"
               GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
    </TextField>

    <Label text="c_p: " GridPane.columnIndex="2" GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets left="20.0" top="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="platformElasticityField" maxWidth="105.0" minWidth="105.0" text="50" GridPane.columnIndex="3"
               GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
    </TextField>

    <Label text="b_b: " GridPane.columnIndex="4" GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets left="20.0" top="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="blockDampingField" maxWidth="105.0" minWidth="105.0" text="0.8" GridPane.columnIndex="5"
               GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
    </TextField>

    <Label text="omega:" GridPane.columnIndex="6" GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets left="20.0" top="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="frequencyField" maxWidth="105.0" minWidth="105.0" text="25" GridPane.columnIndex="7"
               GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
    </TextField>


    <!--second row:-->
    <Label text="b_p: " GridPane.columnIndex="0" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="platformDampingField" maxWidth="105.0" minWidth="105.0" text="0.79" GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Label text="m_b:" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="blockMassField" maxWidth="105.0" minWidth="105.0" text="2" GridPane.columnIndex="3"
               GridPane.rowIndex="1"/>

    <Label text="m_p: " GridPane.columnIndex="4" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="platformMassField" maxWidth="105.0" minWidth="105.0" text="5" GridPane.columnIndex="5"
               GridPane.rowIndex="1"/>

    <Label text="phi: " GridPane.columnIndex="6" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="phaseShiftField" maxWidth="105.0" minWidth="105.0" text="1.64" GridPane.columnIndex="7"
               GridPane.rowIndex="1"/>

    <!--third row-->
    <Label text="F_a: " GridPane.columnIndex="0" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="amplitudeForceField" maxWidth="105.0" minWidth="105.0" text="40.0" GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>

    <Label text="t: " GridPane.columnIndex="2" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="20.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="durationField" maxWidth="105.0" minWidth="105.0" text="10.0" GridPane.columnIndex="3"
               GridPane.rowIndex="2"/>

    <EnumChoiceBox fx:id="chartTypeField" enumType="ru.bmstu.iu9.numan.fx.ChartType" maxWidth="75.0" prefWidth="150.0"
                   GridPane.columnIndex="5" GridPane.columnSpan="1" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="10.0" right="10.0"/>
        </GridPane.margin>
    </EnumChoiceBox>

    <Button id="displayChart" maxWidth="150.0" mnemonicParsing="false" onAction="#onShowClicked" text="Отобразить"
            textAlignment="CENTER" GridPane.columnIndex="6" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
        <font>
            <Font size="14.0"/>
        </font>
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>

    <Button id="optimizeParams" mnemonicParsing="false" onAction="#onOptimizeClicked" text="Оптимизировать"
            GridPane.columnIndex="7" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="10.0" right="10.0"/>
        </GridPane.margin>
    </Button>

    <ScatterChart fx:id="chart" GridPane.columnIndex="0" GridPane.columnSpan="8" GridPane.rowIndex="3">
        <xAxis>
            <NumberAxis side="BOTTOM"/>
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT"/>
        </yAxis>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0"/>
        </padding>
        <GridPane.margin>
            <Insets left="10.0" right="20.0"/>
        </GridPane.margin>
    </ScatterChart>

</GridPane>
